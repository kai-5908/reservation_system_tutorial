# syntax=docker/dockerfile:1
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    UV_PROJECT_ENVIRONMENT=/opt/venv \
    VIRTUAL_ENV=/opt/venv \
    PIP_NO_CACHE_DIR=1 \
    PATH="/opt/venv/bin:/root/.local/bin:/usr/local/bin:${PATH}"

WORKDIR /app/backend

RUN apt-get update && apt-get install -y --no-install-recommends curl ca-certificates && rm -rf /var/lib/apt/lists/*

# Install uv (default path: /root/.local/bin)
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Copy project files (pyproject/lock + sources needed for editable install)
COPY backend /app/backend

RUN /root/.local/bin/uv venv /opt/venv && \
    /root/.local/bin/uv sync --frozen --dev

CMD ["sleep", "infinity"]
